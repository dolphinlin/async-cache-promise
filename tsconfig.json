{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./build", "node_modules"]
}
